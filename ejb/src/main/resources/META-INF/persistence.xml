<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd" version="1.0">
    <persistence-unit name="postgres">
        <jta-data-source>java:/ds/postgresDS</jta-data-source>
        <class>dk.jlo.scorekeeper.model.Match</class>
        <class>dk.jlo.scorekeeper.model.Player</class>
        <class>dk.jlo.scorekeeper.model.Score</class>
        <class>dk.jlo.scorekeeper.model.Team</class>
        <class>dk.jlo.scorekeeper.model.TeamsPlayers</class>
        <class>dk.jlo.scorekeeper.model.Tournament</class>

        <properties>
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
            <!-- property name="hibernate.hbm2ddl.auto" value="update" / -->
            <property name="hibernate.show_sql" value="true" />
            <property name="toplink.jdbc.url" value="jdbc:postgresql:postgres"/>
            <property name="toplink.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="toplink.jdbc.user" value="postgres"/>
            <property name="toplink.jdbc.password" value="admin"/>
            <property name="hibernate.connection.url" value="jdbc:postgresql:scorekeeper"/>
            <property name="hibernate.connection.driver_class" value="org.postgresql.Driver"/>
            <property name="hibernate.connection.username" value="postgres"/>
            <property name="hibernate.connection.password" value="postgres"/>
            <property name="openjpa.ConnectionURL" value="jdbc:postgresql:postgres"/>
            <property name="openjpa.ConnectionDriverName" value="org.postgresql.Driver"/>
            <property name="openjpa.ConnectionUserName" value="postgres"/>
            <property name="openjpa.ConnectionPassword" value="admin"/>
            <property name="eclipselink.jdbc.url" value="jdbc:postgresql:postgres"/>
            <property name="eclipselink.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="eclipselink.jdbc.user" value="postgres"/>
            <property name="eclipselink.jdbc.password" value="admin"/>
        </properties>
    </persistence-unit>
</persistence>